{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts",
   "src/**/*.d.ts",
  "src/**/*.js",
   "src/**/*.vue",
    "src/composables/block/*.js",
  "src/actions/*",
"src/policies/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
